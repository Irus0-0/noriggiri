<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nuriggiri.nuriggiri.board.repository.BoardMapper">

    <resultMap id="boardMap" type="com.nuriggiri.nuriggiri.board.domain.Board">
        <result property="boardNo" column="board_no"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="recommend" column="recommend"/>
        <result property="regDate" column="reg_date"/>
        <result property="channelNo" column="channel_no"/>
        <!--        <result property="viewCnt" column="view_cnt"/>-->
    </resultMap>

    <select id="boardList" resultMap="boardMap">
        SELECT * FROM nuri_board
    </select>

    <insert id="create">
        INSERT INTO nuri_board
        (board_no, title, content, writer, recommend)
        VALUES
        (seq_nuri_board.nextval, #{title}, #{content}, #{writer}, #{recommend})
    </insert>

    <!--    총 게시물 수 조회-->
    <select id="getTotalCount" resultType="int">
        SELECT COUNT(*)
        FROM nuri_board
        <if test="type == 'title'">
            WHERE title LIKE '%' || #{keyword} || '%'
        </if>
        <if test="type == 'writer'">
            WHERE writer LIKE '%' || #{keyword} || '%'
        </if>
        <if test="type == 'content'">
            WHERE content LIKE '%' || #{keyword} || '%'
        </if>
        <!--       <if test="type == 'titleContent'">
                   WHERE  (title LIKE '%' || #{keyword} || '%'
                   OR content LIKE '%' || #{keyword} || '%')

               </if>-->

    </select>

    <select id="more" resultMap="boardMap">
        SELECT * FROM nuri_board
        WHERE board_no = #{boardNo}
    </select>

    <insert id="insertArticle">
        INSERT INTO board
        (board_no, title, content, writer)
        VALUES
        (seq_board.nextval, #{title}, #{content}, #{writer})
    </insert>

    <delete id="deleteArticle">
        DELETE FROM board
        WHERE board_no = #{boardNo}
    </delete>

    <select id="getContent" resultMap="boardMap">
        SELECT * FROM board
        WHERE board_no = #{boardNo}
    </select>

    <update id="modifyArticle">
        UPDATE board
        SET title = #{title},
        writer = #{writer},
        content = #{content}
        WHERE board_no = #{boardNo}
    </update>

    <update id="upViewCount">
        UPDATE board
        SET view_cnt = view_cnt + 1
        WHERE board_no = #{boardNo}
    </update>

</mapper>